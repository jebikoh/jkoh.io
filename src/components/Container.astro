---
import * as CONTENT from "../pages/content"
import AccordionLayout from "../layouts/AccordionLayout.astro";
import Card from "./Card.astro";
---

<ul class="shadow-box">
  <AccordionLayout title={"ABOUT"}>
    {CONTENT.about}
  </AccordionLayout>
    <AccordionLayout title={"PROJECTS"}>
      {
        CONTENT.projects.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe="2023-PRESENT"
              description={item.description}
              tags={item.tech}
              url={item.url}
              url_name={"Open Project"}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"CONTACT"}>
      {
        CONTENT.contact.map((item) => {
          return (
            <Card
              title={""}
              timeframe=""
              description=""
              tags=""
              url={item.source}
              url_name={item.source_name}
            />
          );
        })
      }
    </AccordionLayout>
</ul>
