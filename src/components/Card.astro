---
import { Icon } from "astro-icon";
const { timeframe, title, description, url, tags, url_name } = Astro.props
---

<div class="grid grid-cols-3 grid-rows-1 w-full p-2 place-items-center border-b-[1px] py-8 border-text/25">
    <div class="self-start justify-self-start">
        <p class="text-text/60 text-base">
            { timeframe }
        </p>
    </div>

    <div class="self-start justify-self-start text-left">
        <p class="text-lg text-text/100">{title}</p>
        <p class="text-sm text-text/90">{description}</p>
        <!-- <sub class="text-xs text-text/60">{tags}</sub> -->
    </div>

    <div class="self-start justify-self-end">
        <a href={url} target="_blank" class="text-base text-right text-text/90 flex justify-center items-center px-2 border border-white hover:bg-white hover:text-black">
            {url_name}
            {
                url !== "#" && <Icon name="ep:top-right" class="w-4 h-4 ml-2" />
             }
        </a>
    </div>
</div>